    <div class="container">
      <div class="jumbotron">
        <img src="/public/assets/img/burger.png">
      </div>
          <div class="row">
            <div class="col-md-6">
                <h1>Are you hungry?</h1>
                  <ul class="list-group">
                    {{#each burger}}
                    	<li class="list-group-item">
                        <div class="input-group">
                    	     <p>{{this.burger_name}}</p>
                      </li>

                        <form action="/burgers/update/{{this.id}}?_method=PUT" method="POST">
                        	<textarea type="text" name="event"></textarea>
                        	<button type="submit">Eat Eat Eat!</button>
                        </form>
                      </div>
                    {{/each}}
                  </ul>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <ul class="list-group">
                {{#each burger}}
                  {{#if this.devoured}}
                    <li class="list-group">
                      <p>{{this.burger_name}}</p>
                    </li>
                  {{/if}}
                {{/each}}
              </ul>
            </div>
          </div>
          <div class="row">
            <div class="col-md-8">
              <p>What burger would you like to try today?</p>
              <form class="create-update-form" action="burgers/create" method="POST">
                <div class="form-group">
                  <textarea class="form-control input-md" id="burgerinput" rows="2">
                  </textarea>
                </div>
                  <button class="btn btn-default btn-lg" type="submit">Add My Burger
                  </button>
              </form>
            </div>
          </div>
    </div>
